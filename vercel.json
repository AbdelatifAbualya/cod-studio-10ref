{
  "version": 2,
  "functions": {
    "api/chat.js": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "builds": [
    { 
      "src": "index.html", 
      "use": "@vercel/static" 
    },
    { 
      "src": "api/chat.js", 
      "use": "@vercel/node" 
    }
  ],
  "routes": [
    { 
      "src": "/api/chat", 
      "dest": "/api/chat.js",
      "methods": ["POST", "OPTIONS"]
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ]
}
